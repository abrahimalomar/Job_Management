@model JobManagements.Models.UserModel
@{
    ViewData["Title"] = "CreateCompany";
}

<h1 class="text-center">Create a Company account</h1>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="CreateCompany">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-floating mb-3">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" aria-required="true"  placeholder="Email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" aria-required="true" placeholder="password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="confirmPassword" class="control-label"></label>
                <input asp-for="confirmPassword" class="form-control" aria-required="true" placeholder="confirmPassword" />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>
         
         <br />
            <div class="form-group text-center">
                <input type="submit" value="Create"  class="w-100 btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
    
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
