    @if (TempData.ContainsKey("alert-Type"))
    {
        <div id="alert">
            @if ((string)TempData["alert-Type"] == "Success")
            {
                <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <strong>Success! &nbsp;</strong>   Changes successfully saved.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span id="bgCounter" class="badge bg-light text-dark">&nbsp;</span></button>
                </div>
            }
            else if ((string)TempData["alert-Type"] == "Error")
            {
                <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <strong>Error! &nbsp;</strong>  Server error. Try again, and if the problem persists see your system administrator.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span id="bgCounter" class="badge bg-light text-dark">&nbsp;</span></button>
                </div>

            }
        </div>
        <script type="text/javascript">
            setTimeout(function () { $("#alert").hide('slow', function () { $("#alert").remove(); }); }, 3000);
        </script>
    }

